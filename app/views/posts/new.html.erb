<h2> Create a new blog post </h2>

<% if flash[:post_errors] %>
  <ul>
    <% flash[:post_errors].each do |error| %>
      <li> <%= error%> </li>
    <% end %>
  </ul>
<%end%>

<%= form_with model: @post do |f|%>
    <%= f.label :title %>
    <%= f.text_field :title%> <br>
    <%= f.label :content %>
    <%= f.text_area :content%> <br>

    <%= f.label :blogger %>
    <%= f.collection_select(:blogger_id, Blogger.all, :id, :name, prompt: true) %> <br>
    <%= f.label :destination %>
    <%= f.collection_select(:destination_id, Destination.all, :id, :name, prompt: true) %> <br>

    <%= f.submit%>

<%end%>