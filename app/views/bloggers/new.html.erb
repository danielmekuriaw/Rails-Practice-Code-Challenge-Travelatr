<h2> Create a new blogger </h2>

<% if flash[:blogger_errors] %>
  <ul>
    <% flash[:blogger_errors].each do |error| %>
      <li> <%= error%> </li>
    <% end %>
  </ul>
<%end%>

<%= form_with model: @blogger do |f|%>
    <%= f.label :name%>
    <%= f.text_field :name%> <br>
    <%= f.label :bio%>
    <%= f.text_field :bio%> <br>
    <%= f.label :age%>
    <%= f.number_field :age%><br>

    <%= f.submit%>
<%end%>